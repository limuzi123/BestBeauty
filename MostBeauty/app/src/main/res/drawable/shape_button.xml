<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape >
            <corners android:radius="5dp"/>
            <solid android:color="#F7F7F7"/>
        </shape>
    </item>
